event PerceptionEvent {
	var body : Shape2d<?>
	var perceptions : List<Percept>
	var time : int

	new (b : Shape2d<?>, p : List<Percept>, t : int) {
		this.perceptions = p
		this.body = b
		this.time = t
	}
}


event InfluenceEvent {
	val influence : Influence
	new(influence : Influence){
		this.influence = influence
	}
}