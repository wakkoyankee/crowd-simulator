package crs_sim.environment

import crs_sim.utils.Types
import java.util.List
import java.util.UUID
import org.arakhne.afc.math.geometry.d2.d.Shape2d
import org.arakhne.afc.math.geometry.d2.d.Vector2d

/** 
 * @author hadrien
 * 
